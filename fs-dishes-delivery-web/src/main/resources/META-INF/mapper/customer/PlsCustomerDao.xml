<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fs.dishes.module.customer.dao.PlsCustomerDao">
    <select id="queryList" parameterType="map" resultType="com.fs.dishes.module.customer.entity.PlsCustomer">
        select * from pls_customer
        <where>
            1=1
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="name != null and name !='' ">
                AND name LIKE CONCAT('%', #{name}, '%')
            </if>
            <if test="level != null">
                AND level = #{level}
            </if>
        </where>
    </select>

    <select id="exists" parameterType="PlsCustomer" resultType="java.lang.Boolean">
        select count(1) from pls_customer
        <where>
            status = 1
            <if test="id != null">
                AND id &lt;&gt; #{id}
            </if>
            <if test="name != null and name !='' ">
                AND name = #{name}
            </if>
        </where>
    </select>
</mapper>